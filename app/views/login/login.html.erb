<p class="flash"><%= flash[:notice] %></p>
<%= form_tag "/verify_login" do |f| %>

    <div class="field">
      Email
      <%= text_field_tag :email, nil %>
    </div>

    <div class="field">
      Password
      <%= password_field_tag :password %>
    </div>

    <div class="actions">
      <%= submit_tag "login"%>
    </div>

<% end %>